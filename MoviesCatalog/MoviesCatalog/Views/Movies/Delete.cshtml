@model MoviesCatalog.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); min-height: 100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-lg" style="border-radius: 30px; overflow: hidden;">
                    <div style="height: 150px; background: linear-gradient(135deg, #ff6b6b 0%, #ee5253 100%); position: relative;">
                        <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                            <i class="bi bi-exclamation-triangle-fill" style="font-size: 4rem; color: white;"></i>
                        </div>
                    </div>

                    <div class="card-body p-5 text-center">
                        <h2 class="fw-bold mb-4" style="color: #2c3e50;">Are you sure?</h2>
                        <p class="lead mb-5">You are about to delete <strong class="text-danger">@Model.Title</strong> (@Model.ReleaseYear). This action cannot be undone.</p>

                        <div class="bg-light p-4 rounded-4 mb-5 text-start">
                            <h5 class="fw-bold mb-3">Movie Details:</h5>
                            <p><strong>Title:</strong> @Model.Title</p>
                            <p><strong>Year:</strong> @Model.ReleaseYear</p>
                            <p><strong>Genre:</strong> @Model.Genre?.Name</p>
                            <p><strong>Description:</strong> @Model.Description</p>
                        </div>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-flex gap-3">
                                <button type="submit" class="btn btn-danger btn-lg rounded-pill px-5 py-3 flex-fill">
                                    <i class="bi bi-trash me-2"></i>Yes, Delete It
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-5 py-3 flex-fill">
                                    <i class="bi bi-arrow-left me-2"></i>No, Go Back
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
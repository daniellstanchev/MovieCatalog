@model MoviesCatalog.Models.Actor

@{
    ViewData["Title"] = "Add New Actor";
}

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); min-height: 100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 shadow-lg" style="border-radius: 30px; overflow: hidden;">
                    <div style="height: 150px; background: linear-gradient(135deg, #3498db, #9b59b6); position: relative;">
                        <div style="position: absolute; bottom: -30px; left: 40px;">
                            <div style="width: 80px; height: 80px; background: white; border-radius: 20px; display: flex; align-items: center; justify-content: center; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
                                <i class="bi bi-person-badge" style="font-size: 3rem; color: #3498db;"></i>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-5">
                        <h2 class="fw-bold mb-4" style="color: #2c3e50; margin-left: 100px;">
                            Add New Actor
                        </h2>

                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                            <div class="mb-4">
                                <label asp-for="Name" class="form-label fw-bold">Full Name</label>
                                <input asp-for="Name" class="form-control form-control-lg rounded-pill border-0 shadow-sm"
                                       placeholder="e.g., Tom Hanks" style="background: #f8f9fa;">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="BirthDate" class="form-label fw-bold">Birth Date (optional)</label>
                                <input asp-for="BirthDate" class="form-control form-control-lg rounded-pill border-0 shadow-sm"
                                       type="date" style="background: #f8f9fa;">
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>

                            <div class="d-flex gap-3 mt-5">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 py-3 flex-fill"
                                        style="background: linear-gradient(135deg, #3498db, #9b59b6); border: none;">
                                    <i class="bi bi-check-circle me-2"></i>Save Actor
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-5 py-3 flex-fill">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model MoviesCatalog.Models.Actor

@{
    ViewData["Title"] = $"{Model.Name} - Profile";
}

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); min-height: 100vh;">
    <div class="container">
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill mb-4 px-4 py-2">
            <i class="bi bi-arrow-left me-2"></i>Back to Actors
        </a>

        <div class="card border-0 shadow-lg" style="border-radius: 30px; overflow: hidden;">
            <div style="height: 250px; background: linear-gradient(135deg, #3498db, #9b59b6); position: relative;">
                <div style="position: absolute; bottom: -60px; left: 40px; display: flex; align-items: flex-end; gap: 30px;">
                    <div style="width: 120px; height: 120px; background: white; border-radius: 30px; display: flex; align-items: center; justify-content: center; box-shadow: 0 20px 40px rgba(0,0,0,0.2);">
                        <span style="font-size: 4rem; font-weight: bold; background: linear-gradient(135deg, #3498db, #9b59b6); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                            @Model.Name.Substring(0, 1)
                        </span>
                    </div>
                    <div style="margin-bottom: 20px;">
                        <h1 class="display-4 fw-bold text-white mb-2">@Model.Name</h1>
                        @if (Model.BirthDate != null)
                        {
                            <p class="text-white-50 mb-0">
                                <i class="bi bi-calendar3 me-2"></i>Born: @Model.BirthDate.Value.ToString("MMMM dd, yyyy")
                            </p>
                        }
                    </div>
                </div>
            </div>

            <div class="card-body p-5" style="margin-top: 40px;">
                <h2 class="fw-bold mb-4" style="color: #2c3e50;">
                    <i class="bi bi-film me-2" style="color: #e74c3c;"></i>
                    Filmography
                </h2>

                @if (Model.MovieActors != null && Model.MovieActors.Any())
                {
                    <div class="row g-4">
                        @foreach (var ma in Model.MovieActors.OrderByDescending(ma => ma.Movie?.ReleaseYear))
                        {
                            var movie = ma.Movie;
                            <div class="col-md-6 col-lg-4">
                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie?.Id"
                                   class="text-decoration-none">
                                    <div class="card h-100 border-0 shadow-sm" style="border-radius: 20px; overflow: hidden; transition: all 0.3s;">
                                        <div style="height: 150px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); position: relative;">
                                            <div style="position: absolute; bottom: 15px; left: 20px; right: 20px;">
                                                <h5 class="text-white fw-bold mb-1">@movie?.Title</h5>
                                                <div class="d-flex justify-content-between">
                                                    <span class="badge bg-light text-dark">@movie?.ReleaseYear</span>
                                                    <span class="badge bg-danger">@movie?.Genre?.Name</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body p-3">
                                            <p class="text-muted small mb-0">
                                                @(movie?.Description?.Length > 100 ? movie.Description.Substring(0, 100) + "..." : movie?.Description ?? "No description")
                                            </p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-camera-reels" style="font-size: 4rem; color: #ccc;"></i>
                        <h4 class="text-muted mt-3">No movies found for this actor</h4>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.15) !important;
    }
</style>
@model MoviesCatalog.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); min-height: 100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card border-0 shadow-lg" style="border-radius: 30px; overflow: hidden;">
                    <div style="height: 150px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); position: relative;">
                        <div style="position: absolute; bottom: -30px; left: 40px;">
                            <div style="width: 80px; height: 80px; background: white; border-radius: 20px; display: flex; align-items: center; justify-content: center; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
                                <i class="bi bi-pencil-square" style="font-size: 3rem; color: #667eea;"></i>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-5">
                        <h2 class="fw-bold mb-4" style="color: #2c3e50; margin-left: 100px;">
                            Edit Movie: @Model.Title
                        </h2>

                        <form asp-action="Edit" method="post" id="editMovieForm">
                            <input type="hidden" asp-for="Id" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card border-0 shadow-sm mb-4">
                                        <div class="card-header bg-transparent border-0 pt-3">
                                            <h5 class="fw-bold"><i class="bi bi-info-circle me-2 text-primary"></i>Movie Details</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <label asp-for="Title" class="form-label fw-bold">Title</label>
                                                <input asp-for="Title" class="form-control rounded-pill" />
                                                <span asp-validation-for="Title" class="text-danger"></span>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label asp-for="ReleaseYear" class="form-label fw-bold">Release Year</label>
                                                    <input asp-for="ReleaseYear" class="form-control rounded-pill" />
                                                    <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label asp-for="GenreId" class="form-label fw-bold">Genre</label>
                                                    <select asp-for="GenreId" class="form-select rounded-pill" asp-items="ViewBag.GenreId">
                                                        <option value="">Select Genre</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label asp-for="Description" class="form-label fw-bold">Description</label>
                                                <textarea asp-for="Description" class="form-control rounded-4" rows="4"></textarea>
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card border-0 shadow-sm mb-4">
                                        <div class="card-header bg-transparent border-0 pt-3">
                                            <h5 class="fw-bold"><i class="bi bi-people-fill me-2 text-primary"></i>Cast</h5>
                                        </div>
                                        <div class="card-body">
                                            <h6 class="fw-bold mb-3">Current Cast:</h6>
                                            <div id="currentCast" class="mb-4">
                                                @if (Model.MovieActors != null && Model.MovieActors.Any())
                                                {
                                                    @foreach (var ma in Model.MovieActors.OrderBy(ma => ma.Actor?.Name))
                                                    {
                                                        <div class="d-flex justify-content-between align-items-center mb-2 p-2 rounded-3"
                                                             style="background: linear-gradient(135deg, #f8f9fa, #ffffff); border: 1px solid #e0e0e0;">
                                                            <div>
                                                                <i class="bi bi-person-circle me-2 text-primary"></i>
                                                                <span class="fw-bold">@ma.Actor?.Name</span>
                                                            </div>
                                                            <button type="button" class="btn btn-sm btn-outline-danger rounded-pill remove-actor"
                                                                    data-actor-id="@ma.ActorId">
                                                                <i class="bi bi-x"></i> Remove
                                                            </button>
                                                        </div>
                                                    }
                                                }
                                                else
                                                {
                                                    <p class="text-muted text-center py-3">No cast members yet</p>
                                                }
                                            </div>
                                            <div id="selectedActorsContainer">
                                                @if (Model.MovieActors != null && Model.MovieActors.Any())
                                                {
                                                    @foreach (var ma in Model.MovieActors)
                                                    {
                                                        <input type="hidden" name="SelectedActorIds" value="@ma.ActorId" class="actor-input" />
                                                    }
                                                }
                                            </div>
                                            <h6 class="fw-bold mb-3 mt-4">Add Actor to Cast:</h6>
                                            <div class="input-group mb-3">
                                                <select id="existingActorSelect" class="form-select rounded-start-pill">
                                                    <option value="">Select actor...</option>
                                                    @if (ViewBag.AllActors != null)
                                                    {
                                                        foreach (var actor in ViewBag.AllActors)
                                                        {
                                                            <option value="@actor.Id">@actor.Name</option>
                                                        }
                                                    }
                                                </select>
                                                <button type="button" class="btn btn-primary rounded-end-pill" id="addExistingActorBtn">
                                                    <i class="bi bi-plus"></i> Add
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex gap-3 mt-4">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 py-3 flex-fill"
                                        style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                                    <i class="bi bi-check-circle me-2"></i>Save Changes
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-5 py-3 flex-fill">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            $('#addExistingActorBtn').click(function() {
                var actorId = $('#existingActorSelect').val();
                var actorName = $('#existingActorSelect option:selected').text();

                if (!actorId) {
                    alert('Please select an actor');
                    return;
                }
                if ($(`input.actor-input[value="${actorId}"]`).length > 0) {
                    alert('This actor is already in the cast');
                    return;
                }
                $('#selectedActorsContainer').append(`<input type="hidden" name="SelectedActorIds" value="${actorId}" class="actor-input" />`);
                $('#currentCast').append(`
                    <div class="d-flex justify-content-between align-items-center mb-2 p-2 rounded-3" style="background: linear-gradient(135deg, #f8f9fa, #ffffff); border: 1px solid #e0e0e0;">
                        <div>
                            <i class="bi bi-person-circle me-2 text-primary"></i>
                            <span class="fw-bold">${actorName}</span>
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-danger rounded-pill remove-actor" data-actor-id="${actorId}">
                            <i class="bi bi-x"></i> Remove
                        </button>
                    </div>
                `);
                $('#existingActorSelect').val('');
            });

            $(document).on('click', '.remove-actor', function() {
                var actorId = $(this).data('actor-id');
                $(this).closest('div.d-flex').remove();
                $(`input.actor-input[value="${actorId}"]`).remove();
            });
        });
    </script>
}
@model MoviesCatalog.Models.Genre

@{
    ViewData["Title"] = $"{Model.Name} Movies";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 style="color: #2c3e50; font-weight: 300;">
            <span style="border-bottom: 3px solid #e74c3c; padding-bottom: 5px;">@Model.Name</span> Movies
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            ← Back to Genres
        </a>
    </div>

    @if (Model.Movies != null && Model.Movies.Any())
    {
        <div class="row g-4">
            @foreach (var movie in Model.Movies)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0" style="border-radius: 15px; overflow: hidden; transition: transform 0.3s;">
                        <div style="height: 8px; background: linear-gradient(90deg, #3498db, #e74c3c);"></div>
                        <div class="card-body p-4">
                            <h5 class="card-title fw-bold mb-3" style="color: #2c3e50;">@movie.Title</h5>
                            <h6 class="card-subtitle mb-3 text-muted">
                                <span class="badge bg-light text-dark px-3 py-2">@movie.ReleaseYear</span>
                            </h6>
                            <p class="card-text text-secondary" style="line-height: 1.6;">
                                @(movie.Description?.Length > 120 ? movie.Description.Substring(0, 120) + "..." : movie.Description ?? "No description available.")
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0 p-4 pt-0">
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id"
                               class="btn btn-outline-primary rounded-pill w-100"
                               style="border-width: 2px; font-weight: 500;">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="display-1 text-muted mb-4">🎬</div>
            <h3 class="text-muted">No movies found in this genre</h3>
            <p class="text-secondary mt-3">Check back later for new releases!</p>
        </div>
    }
</div>

<style>
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }
</style>